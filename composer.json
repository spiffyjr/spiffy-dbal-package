{
    "name": "spiffy/spiffy-dbal-package",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me"
        }
    ],
    "description": "Spiffy\\DBALPackage is a package for SpiffyFramework that integrates Doctrine DBAL.",
    "require": {
        "php": ">=5.4",
        "doctrine/dbal": "~2.5@beta",
        "spiffy/spiffy-inject": "~1.0-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.0",
        "ext-pdo_sqlite": "*"
    },
    "autoload": {
        "psr-4": {
            "Spiffy\\DBALPackage\\": [
                "src/",
                "test/"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0-dev"
        }
    }
}
